{
  "pluginAlias": "LevoitHumidifiers",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Levoit Humidifiers"
      },
      "email": {
        "title": "Email",
        "type": "string",
        "required": true,
        "description": "VeSync's account email."
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "VeSync's account password"
      },
      "accessories": {
        "type": "object",
        "properties": {
          "cool_mist": {
            "title": "Cool Mist Fan",
            "type": "boolean",
            "default": true,
            "description": "Enable fan for the Cool Mist"
          },
          "warm_mist": {
            "title": "Warm Mist Fan",
            "type": "boolean",
            "default": true,
            "description": "Enable fan for Warm Mist"
          },
          "sleep_mode": {
            "title": "Sleep Mode Switch",
            "type": "boolean",
            "default": true,
            "description": "Enable switch for Sleep Mode"
          },
          "display": {
            "title": "Display Switch",
            "type": "boolean",
            "default": true,
            "description": "Enable switch for the Display"
          },
          "night_light": {
            "title": "Night Light Slider",
            "type": "boolean",
            "default": true,
            "description": "Enable brightness slider / switch for the Night Light"
          }
        }
      },
      "options": {
        "type": "object",
        "properties": {
          "whenDisconnected": {
            "title": "When humidifier is disconnected from WiFi, HomeKit should:",
            "description": "Change how HomeKit handles a disconnected device. Read the \"Note to Seasonal Humidifier Users\" in the README for more info.",
            "type": "string",
            "default": "not_responding",
            "required": true,
            "oneOf": [
              { "title": "Show device as \"off\"", "enum": ["off"] },
              { "title": "Show device as \"Not Responding\"", "enum": ["not_responding"] },
              { "title": "Remove the device", "enum": ["remove"] }
            ]
          }
        }
      }
    }
  }
}
